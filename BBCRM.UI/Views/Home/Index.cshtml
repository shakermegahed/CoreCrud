@{
    ViewData["Title"] = "Home Page";
}
<script src="~/viewsScripts/test.js"></script>
<div class="row">
    <div class="panel panel-default">

        <div class="row panel-heading">
            <div class="pull-left">
                <h4 class="panel-title">Table List</h4>
            </div>
            <div class="pull-right">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Create New Row" class="glyphicon glyphicon-plus-sign"></span> Create New Row
                </a>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">


                <div class="row">
                    <table id="AssigmentTbl" data-toggle="table" class="table table-striped table-bordered dataTable no-footer"
                           data-url="/home/tbl"
                      
                           data-side-pagination="server"
                           data-page-list="[5, 10, 20, 50, 100, 200]"
   
                           data-response-handler="tstJS.Table.ResponseHandler">
                        <thead>
                            <tr>
                                <th class="col-md-colm-20" data-field="name" data-align="center" data-sortable="true"> Name</th>
                                <th class="col-md-colm-20" data-formatter="tstJS.Table.OptionsFormatter" data-align="center">Options</th>
                            </tr>
                        </thead>
                    </table>
                </div>

            </div>
        </div>
    </div>
    </div>
    @section scripts
        {


    }

